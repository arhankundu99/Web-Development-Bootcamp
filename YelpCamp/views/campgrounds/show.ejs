<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campgrounds</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/stars.css">
    <link rel="stylesheet" href="/css/show.css">
</head>

<body>
    <%- include('../partials/navbar') %>
    <div class="container" id="main-container">
        <div class="container overflow-auto" id="campground-description">
            <h1><%= campground.title %> </h1>
            <p><b>Posted By: </b> <%= campground.username %></p>
            <p><b>Location: </b> <%= campground.location %></p>
            <p><b>Price: </b> <%= campground.price %></p>

            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src=<%= campground.images[0].url %> alt="First slide">
                    </div>

                </div>

                <% if(campground.images.length > 1){ %>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <% } %>
            </div>

            <p><%= campground.description %> </p>

            <!--Only the author of the campground can delete or edit the campground-->
            <% if(currentUser && currentUser.username === campground.username){ %>
            <form action="/campgrounds/<%= campground._id %>?_method=delete" method="post">
                <button type="submit">Delete this campground</button>
            </form>

            <a href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
            <% } %>

            <!--Display the map-->


            <a href="/campgrounds">View All Campgrounds</a>

        </div>

        <div class="container overflow-auto" id="campground-reviews">
            <form action="/campgrounds/<%= campground._id %>/reviews" method="post" class="validated-form">
                <div class="mb-3">
                    <fieldset class="starability-basic">
                        <legend>Rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="rating" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="rating" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="rating" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="rating" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="rating" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="body" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
    
                <button type="submit" class="btn btn-success">Submit Review</button>
            </form>
    
            <% for(let review of campground.reviews){ %>
            <div class="card">
                <div class="row">
                    <div>
                        <p class="starability-result" data-rating=<%= review.rating %>>
                            Rated: <%= review.rating %> stars
                        </p>
                        <p>Review: <%= review.body %> </p>
                        <p>Posted By: <%= review.username %> </p>
    
                        <!--Only the author of the review can delete the review-->
                        <% if(currentUser && currentUser.username === review.username){ %>
    
                        <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=delete"
                            method="post">
                            <button type="submit" class="btn btn-danger">Delete Comment</button>
                        </form>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
       
    </div>



    <%- include('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
</body>

</html>